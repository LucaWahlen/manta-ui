{
  "name": "manta-ui",
  "version": "0.0.1",
  "description": "A modern web component library with design tokens and dark mode support",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/manta-ui/manta-ui.esm.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/manta-ui/manta-ui.esm.js",
      "require": "./dist/manta-ui/manta-ui.cjs.js"
    },
    "./css": "./dist/manta-ui/manta-ui.css",
    "./my-component": {
      "types": "./dist/components/my-component.d.ts",
      "import": "./dist/components/my-component.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LucaWahlen/manta-ui.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@stencil/core": "^4.27.1",
    "@stencil/storybook-plugin": "^0.5.6",
    "@storybook/addon-a11y": "^9.1.16",
    "@storybook/addon-docs": "^9.1.16",
    "@storybook/addon-themes": "^9.1.16",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/react": "^19.2.7",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0",
    "storybook": "^9.1.16",
    "vite": "^6.4.1"
  },
  "license": "MIT"
}
